@page
@model RegisterModel
@{
   
}
<div class="h-100">
    <div class="mask d-flex align-items-center h-100">
        <div class="container">
            <div class="row p-5">
                <div class="col-4">
                    <div class="card shadow-2-strong" style="background-color:#f5f7fa">
                        <div class="card-body">
                            <div class=" text-center">
                                <h3>Register Page</h3>
                            </div>
                            <Form method="post" id="account">
                                <div class="form-floating" style="margin:10px">
                                    <input class="form-control" asp-for="input.Email" autocomplete="username" aria-required="true" placeholder="E-Mail">
                                    <label asp-for="input.Email" class="form-label"></label>
                                </div>
                                <div class="form-floating" style="margin:10px">
                                    <input class="form-control" asp-for="input.Password" autocomplete="Password" aria-required="true" placeholder="Password" type="password" />
                                    <label asp-for="input.Password" class="form-control-color"></label>
                                </div>
                                <div style="margin:10px">
                                    <button id="Regester-submit" type="submit"  class="w-100 btn btn-lg btn-primary">Regester</button>
                                </div>
                                <div asp-Validation-summary="ModelOnly" class="text-danger"></div>
                            </Form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
